@model IEnumerable<PataseLuxos.Models.Carrinho>

@{
    ViewData["Title"] = "Index";
}

<h1>Carrinho</h1>

<p>
    <a asp-action="Create">Adicionar Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormaPagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.ProdutoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormaPagamento.FormaPagamentoId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CarrinhoId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.CarrinhoId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.CarrinhoId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
