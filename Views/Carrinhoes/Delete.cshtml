@model PataseLuxos.Models.Carrinho

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Carrinho</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.ProdutoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FormaPagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormaPagamento.FormaPagamentoId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CarrinhoId" />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100 p-3 ">
                        <i class="bi bi-floppy" value="Delete"></i> Deletar
                    </button>
                </div>
            </div>

            <div class="col-md-4">
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary w-100 p-3"><i class="bi bi-arrow-repeat"></i>Voltar</a>
                </div>
            </div>
        </div>
    </form>

</div>
