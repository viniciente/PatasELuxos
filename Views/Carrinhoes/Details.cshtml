@model PataseLuxos.Models.Carrinho

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Carrinho</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.ProdutoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FormaPagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormaPagamento.FormaPagamentoId)
        </dd>
    </dl>
</div>

<form asp-action="Details">
    <input type="hidden" asp-for="CarrinhoId" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100 p-3 ">
                    <i class="bi bi-floppy" sp-action="Edit" asp-route-id="@Model?.CarrinhoId"></i> Deletar
                </button>
            </div>
        </div>

        <div class="col-md-4">
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary w-100 p-3"><i class="bi bi-arrow-repeat"></i>Voltar</a>
            </div>
        </div>
    </div>
</form>
