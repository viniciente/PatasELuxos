@model IEnumerable<PataseLuxos.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Animais</h1>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoAnimal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeAnimal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoAnimal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeAnimal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.UsuarioId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AnimalId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.AnimalId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.AnimalId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
